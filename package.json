{
  "name": "nextjs-pwa-graphql-sql-boilerplate",
  "description": "Next.js serverless PWA with GraphQL (Apollo) and Postgres SQL",
  "version": "1.5.0",
  "author": "Tom SÃ¶derlund <tom@tomsoderlund.com>",
  "license": "ISC",
  "main": "server/server.js",
  "scripts": {
    "test": "echo 'Running Standard.js and Jasmine unit tests...\n' && yarn lint && yarn unit",
    "unit": "jasmine",
    "lint": "standard",
    "fix": "standard --fix",
    "dev": "echo 'Running as Express server'; nodemon -w server -w graphql -w package.json server/server.js",
    "now": "echo 'Running as Zeit Now serverless'; now dev --listen 3003",
    "deploy": "now --prod",
    "start": "NODE_ENV=production node server/server.js",
    "build": "next build",
    "heroku-postbuild": "next build",
    "model": "mkdir graphql/newObject; touch graphql/newObject/{hooks,queries,resolvers,schema}.js",
    "dev:machine": "nodemon -w server -w graphql -w package.json server/server.js"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      ".next/",
      "next.config.js"
    ],
    "globals": [
      "describe",
      "expect",
      "it"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@apollo/react-ssr": "^3.1.5",
    "apollo-cache-inmemory": "1.6.3",
    "apollo-client": "2.6.4",
    "apollo-link-http": "1.5.15",
    "apollo-server-express": "^2.14.2",
    "apollo-server-micro": "^2.14.2",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "graphql": "^14.7.0",
    "graphql-tag": "2.10.1",
    "isomorphic-unfetch": "^3.0.0",
    "merge-graphql-schemas": "^1.7.6",
    "next": "latest",
    "next-offline": "^4.0.6",
    "pg": "^7.18.2",
    "prop-types": "^15.6.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "sql-wizard": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "concurrently": "^5.3.0",
    "jasmine": "^3.3.1",
    "nodemon": "^1.19.4",
    "standard": "^12.0.1"
  }
}
